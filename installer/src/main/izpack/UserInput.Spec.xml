    <field type="divider" align="top"/>
    <field type="space"/>


    <field type="file" align="left" variable="jdbcDriver">
        <spec txt="JDBC Driver" size="25" set=""/>  
    </field>



    <field type="text" align="left" variable="dbUserName">
        <spec txt="Username" size="25" set="ORCHESTRA"/>
        <!--
        <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="You must provide your USERNAME!"/>
        -->
    </field>

    <field type="space"/>

    <field type="text" align="left" variable="dbPassword">
        <spec txt="Password" size="25" set="ORCHESTRA"/>
        <!--
        <validator class="com.izforge.izpack.util.NotEmptyValidator" txt="You must provide your PASSWORD!"/>
        -->
    </field>

    <field type="space"/>
    <field type="divider" align="top"/>
    <field type="space"/>

    <field type="text" align="left" variable="server.name">
        <spec txt="Server" size="25" set="localhost"/>
    </field>

    <field type="space"/>

    <field type="text" align="left" variable="server.start.port">
        <spec txt="Port" size="25" set="8080"/>
    </field>

    <field type="space"/>

    <field type="text" align="left" variable="db.name">
        <spec txt="Database" size="25" set="ORC"/>
    </field>

